{% extends 'base.html.twig' %}

{% block title %}Calculator{% endblock %}

{% block body %}
    <div class="container-fluid m-auto w-50">
        <div class="row row-cols-2 mt-5 mb-1">
            <h1 class="text-center"><i class="bi bi-calculator"></i>Calculator</h1>
            <div class="text-end">
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1"
                            data-bs-toggle="dropdown" aria-expanded="false">
                        {{ app.user.profile }}
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                        <li><a class="dropdown-item" href="{{ path("app_profile") }}">Profile</a></li>
                        <li><a class="dropdown-item" href="{{ path('app_logout') }}">Logout</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="container m-auto w-50" data-controller="calculator">
            <div class="row row-cols-1">
                <math data-calculator-target="display"
                      style="text-align:right;height:75px;border:1px solid black;font-size:3em;">
                    <mrow>

                    </mrow>
                </math>
            </div>
            <div class="row row-cols-4 flex-nowrap justify-content-center">
                <button class="btn btn-sm btn-danger m-1" data-action="calculator#bksp">Bksp</button>
                <button class="btn btn-sm btn-secondary m-1" data-action="calculator#mo">(</button>
                <button class="btn btn-sm btn-secondary m-1" data-action="calculator#mo">)</button>
                <button class="btn btn-sm btn-secondary m-1" data-action="calculator#mo">&divide;</button>
            </div>
            <div class="row row-cols-4 flex-nowrap justify-content-center">
                <button class="btn btn-sm btn-secondary m-1" data-action="calculator#mn">7</button>
                <button class="btn btn-sm btn-secondary m-1" data-action="calculator#mn">8</button>
                <button class="btn btn-sm btn-secondary m-1" data-action="calculator#mn">9</button>
                <button class="btn btn-sm btn-secondary m-1" data-action="calculator#mo">Ã—</button>
            </div>

            <div class="row row-cols-4 flex-nowrap justify-content-center">
                <button class="btn btn-sm btn-secondary m-1" data-action="calculator#mn">4</button>
                <button class="btn btn-sm btn-secondary m-1" data-action="calculator#mn">5</button>
                <button class="btn btn-sm btn-secondary m-1" data-action="calculator#mn">6</button>
                <button class="btn btn-sm btn-secondary m-1" data-action="calculator#mo">-</button>
            </div>

            <div class="row row-cols-4 flex-nowrap justify-content-center">
                <button class="btn btn-sm btn-secondary m-1" data-action="calculator#mn">1</button>
                <button class="btn btn-sm btn-secondary m-1" data-action="calculator#mn">2</button>
                <button class="btn btn-sm btn-secondary m-1" data-action="calculator#mn">3</button>
                <button class="btn btn-sm btn-secondary m-1" data-action="calculator#mo">+</button>
            </div>

            <div class="row row-cols-4 flex-nowrap justify-content-center">
                <button class="btn btn-sm btn-secondary m-1" data-action="calculator#mn">0</button>
                <button class="btn btn-sm btn-secondary m-1" data-action="calculator#mo">.</button>
                <button class="btn btn-sm btn-danger m-1" data-action="calculator#clear">C</button>
                <button class="btn btn-sm btn-primary m-1" data-action="calculator#calculate">=</button>
            </div>
        </div>

    </div>

{% endblock %}
